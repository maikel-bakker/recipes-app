{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "member-access": [true, "no-public"]
    }
}
